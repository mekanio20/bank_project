<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="./css/style.css" />
  <title>MAGRO DMCC</title>
  <style>
    input {
      text-align: center;
    }

    .tmt {
      width: 80px;
    }

    .btn_margin {
      margin-right: 4px;
    }
  </style>
</head>

<body>
  <div class="magro">
    <header class="magro__header header">
      <div class="header__container __container">
        <a href="#" class="header__logo">
          <img src="./img/logo/logo.png" />
        </a>
        <div class="header__mobile">
          <menu class="header__menu menu-header">
            <ul class="menu-header__list">
              <li class="menu-header__item">
                <a href="/" class="menu-header__link">Baş Sahypa</a>
              </li>
              <li class="menu-header__item">
                <a href="/about" class="menu-header__link">Biz Barada</a>
              </li>
              <li class="menu-header__item">
                <a href="/employees" class="menu-header__link active">Işgarler</a>
              </li>
              <li class="menu-header__item">
                <a href="/contact" class="menu-header__link">Habarlaşmak</a>
              </li>
            </ul>
          </menu>
          <div class="header__lang lang-header">
            <div class="lang-header__menu icon-arrow-down">
              <a href="#" class="lang-header__item active">TM</a>
              <a href="#" class="lang-header__item">RU</a>
              <a href="#" class="lang-header__item">EN</a>
            </div>
          </div>
        </div>
        <div class="header__burger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </header>
    <div class="main__table">
      <div class="table">
        <table>
          <thead>
            <tr>
              <th>T/b</th>
              <th>Ady, familýasy</th>
              <th>Wezipesi</th>
              <th>Telefon belgisi </th>
              <th>Elektron poçtasy</th>
              <th>Aýlyk haky</th>
              <th>Amallar</th>
            </tr>
          </thead>
          <tbody id="tbody">
            <% let count = 0 %>
            <% employees.forEach(item=> { %>
              <tr>
                <td class="number"><%= count += 1 %></td>
                <td><%= item.fullname %></td>
                <td><%= item.role %></td>
                <td><%= item.phone %></td>
                <td><%= item.email %></td>
                <td><%= item.salary %></td>
                <td class="actions">
                  <a href="/employees/<%= item.id %>" id="btn_delete" type="button">pozmak</button>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <button id="btn_append" onclick="document.getElementById('modalElem').style.display='block'">Işgär goşmak</button>
      <div id="modalElem" class="modal">
        <form class="modal__form animate" action="/employees" method="post">
          <div class="modal__content">
            <label>Ady, familýasy</label>
            <input id="name" name="name" class="modal__input" type="text" required>

            <label>Wezipesi</label>
            <input id="role" name="role" class="modal__input" type="text" required>

            <label>Telefon belgisi</label>
            <input id="phone" name="phone" class="modal__input" type="text" required>

            <label>E-poçtasy</label>
            <input id="email" name="email" class="modal__input" type="email" required>

            <label>Aýlyk haky</label>
            <input id="salary" name="salary" class="modal__input" type="text" required>
          </div>

          <div class="modal__content" style="background-color:#f1f1f1">
            <button class="modal__button cancelbtn" type="button"
              onclick="document.getElementById('modalElem').style.display='none'">Çykmak</button>
            <button class="modal__button submitbtn" type="submit" id="add_btn">Goşmak</button>
          </div>
        </form>
      </div>
    </div>
    <footer class="magro__footer footer-magro">
      <div class="footer-magro__container __container">
        <div class="footer-magro__top">
          <a href="#" class="footer-magro__logo">
            <img src="./img/logo/logo.png" />
          </a>
          <menu class="footer-magro__menu">
            <ul class="footer-magro__list">
              <div class="footer-magro__social">
                <div class="footer-magro__social-item">
                  <div class="footer-magro__social-icon">
                    <img src="./img/icons/social/location.svg" />
                  </div>
                  <p class="footer-magro__social-text">
                    Aşgabat şäheri A. Nyýazow köçesi jaý 424
                  </p>
                </div>
                <div class="footer-magro__social-item">
                  <div class="footer-magro__social-icon">
                    <img src="./img/icons/social/call.svg" />
                  </div>
                  <p class="footer-magro__social-text">+993 (12) 44-33-19</p>
                </div>
                <div class="footer-magro__social-item">
                  <div class="footer-magro__social-icon">
                    <img src="./img/icons/social/mail.svg" />
                  </div>
                  <p class="footer-magro__social-text">info@magrodmcc.tm</p>
                </div>
              </div>
            </ul>
          </menu>
        </div>
      </div>
    </footer>
    <div class="magro__copyright copyright-magro">
      <div class="copyright-magro__container __container">
        <p class="copyright-magro__text">
          Copyright 2010 © sunfze.com All right reserved Web Development
          Company
        </p>
      </div>
    </div>
  </div>
  <script src="/js/script.js"></script>
</body>

</html>